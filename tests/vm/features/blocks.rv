var glob1 = 7.5
var glob2 = 42.5

fn main() {
    // Last expression returned while discarding inbetween locals
    var a: int = {
        var space = 67
        var nb = 7
        var sneaky = 90
        break nb
    }

    print a // expect: 7

    // Returning an outter local from a scope
    var b = 56

    var c: int = {
        var sneaky = 90
        break b
    }

    print c // expect: 56

    {
        var tmp = 67
        var b = 87 - 6.
        print b // expect: 81
    }

    // Naked break
    {
        break
        print "no" // should not see this one
    }

    // Returning a global
    var scope = {
        print "in scope" // expect: "in scope"
        break glob1
    }

    print scope // expect: 7.5
}
